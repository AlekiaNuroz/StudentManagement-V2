<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.ListStudentsController">
   <VBox styleClass="vbox">
      <Label fx:id="labelActiveStudents" styleClass="active-students-label" text="Active Students"/>
      <ListView fx:id="listViewStudents" styleClass="student-list-view"/>
   </VBox>
   <VBox styleClass="vbox">
      <Label fx:id="labelEditStudent" styleClass="active-students-label" text="Edit Student"/>
      <TextField fx:id="txtStudentId" disable="true" styleClass="edit-textbox" />
      <TextField fx:id="txtStudentName" styleClass="edit-textbox" />
      <HBox alignment="CENTER">
         <Button mnemonicParsing="false" text="Confirm Changes" onAction="#handleEditStudentClick"/>
      </HBox>
   </VBox>

</VBox>
