<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.DashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <top>
        <GridPane prefWidth="800" hgap="30.0" vgap="30.0" alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="75.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <VBox alignment="CENTER" styleClass="dashboard-card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label styleClass="dashboard-title" text="Total Students" />
                <Label fx:id="totalStudentsLabel" styleClass="dashboard-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" styleClass="dashboard-card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label styleClass="dashboard-title" text="Active Students" />
                <Label fx:id="activeStudentsLabel" styleClass="dashboard-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" styleClass="dashboard-card" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <Label styleClass="dashboard-title" text="Inactive Students" />
                <Label fx:id="inactiveStudentsLabel" styleClass="dashboard-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" styleClass="dashboard-card" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label styleClass="dashboard-title" text="Total Courses" />
                <Label fx:id="totalCoursesLabel" styleClass="dashboard-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" styleClass="dashboard-card" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label styleClass="dashboard-title" text="Active Courses" />
                <Label fx:id="activeCoursesLabel" styleClass="dashboard-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" styleClass="dashboard-card" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <Label styleClass="dashboard-title" text="Inactive Courses" />
                <Label fx:id="inactiveCoursesLabel" styleClass="dashboard-value" text="0" />
            </VBox>
            <VBox alignment="CENTER" styleClass="dashboard-card" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3">
                <Label styleClass="dashboard-title" text="Total Enrolled Students" />
                <Label fx:id="totalEnrolledStudentsLabel" styleClass="dashboard-value" text="0" />
            </VBox>
        </GridPane>
    </top>
</BorderPane>