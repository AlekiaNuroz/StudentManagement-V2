<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanagementsystem.StudentsController">
   <VBox styleClass="vbox">
      <Label fx:id="labelActiveStudents" styleClass="active-students-label" text="Active Students"/>
      <ListView fx:id="listViewStudents" styleClass="student-list-view"/>
   </VBox>
   <VBox styleClass="vbox">
      <Label fx:id="labelEditStudent" styleClass="active-students-label" text="Edit Student"/>
      <HBox alignment="BASELINE_LEFT">
         <Label fx:id="labelStudentId" text="Student Id" />
         <TextField fx:id="txtStudentId" disable="true" styleClass="edit-textbox" />
         <Region HBox.hgrow="ALWAYS" />
      </HBox>
      <HBox alignment="BASELINE_LEFT">
         <Label fx:id="labelStudentName" text="Student Name" />
         <TextField fx:id="txtStudentName" styleClass="edit-textbox" />
         <Region HBox.hgrow="ALWAYS" />
      </HBox>
      <HBox alignment="CENTER" styleClass="hbox">
         <Button mnemonicParsing="false" text="Confirm Changes" styleClass="button" onAction="#handleEditStudentClick"/>
         <Button mnemonicParsing="false" text="Delete Student" styleClass="button-delete" onAction="#handleDeleteStudentClick"/>
         <Region HBox.hgrow="ALWAYS" />
      </HBox>
   </VBox>

</VBox>
